---
import { Icon } from "astro-icon";
import ExtLink from "./ExtLink.astro";

export type LabelPlacement = "top" | "left" | "right" | "bottom" | "inside";

export interface Props {
    href: string;
    icon: string;
    size: number;
    label: string;
    placement: LabelPlacement;
    overridePack?: string;
}

const { href, label, placement, icon, size, overridePack } = Astro.props;
---

<ExtLink
    aria-label={label}
    data-tooltip={placement !== "inside" ? label : null}
    data-placement={placement !== "inside" ? placement : null}
    href={href}
>
    <Icon width={size} height={size} name={`${overridePack ?? "bi"}:${icon}`} />
    {placement === "inside" && label}
</ExtLink>
